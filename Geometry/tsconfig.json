/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "outFile": "./dist/bundle.js",
    "target": "ESNext",
    "module": "AMD",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./test/**/*"
  ]
}